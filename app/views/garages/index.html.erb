<h1>Listing garages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Address</th>
    <th>Cif</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @garages.each do |garage| %>
  <tr>
    <td><%= garage.name %></td>
    <td><%= garage.phone %></td>
    <td><%= garage.email %></td>
    <td><%= garage.address %></td>
    <td><%= garage.cif %></td>
    <td><%= link_to 'Show', garage %></td>
    <td><%= link_to 'Edit', edit_garage_path(garage) %></td>
    <td><%= link_to 'Destroy', garage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

